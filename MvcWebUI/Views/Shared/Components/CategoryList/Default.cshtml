@model CategoriesListView
@{
    ViewData["Title"] = "Index";
}
<h1>Kategoriler</h1>

<div class="list-group">
    @{var css2 = "list-group-item";

        if (Model.CurrentCategory==0)
        { 
            css2 += " active"; //boşluk bırak 
        }
   
          <a href="/product/index" class="@css2">Tüm Ürünler</a>
   }
 
  
  @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        if (category.CategoryId==Model.CurrentCategory)
        {
            css += " active"; //boşluk bırak 
        }
        <a href="/product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
 }

</div> 